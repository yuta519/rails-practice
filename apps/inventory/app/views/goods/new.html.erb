<h1>Register a new stuff</h1>


<%= form_with model: @good, local: true, data: { turbo_frame: 'new_post_form' } do |form| %>
  <ul id="new_post_form">
    <li><%= form.text_field :name, placeholder: 'Name' %></li>
    <%# <li><%= form.text_area :content, placeholder: 'Content' %>
    <li><%= form.select :category, options_for_select(@categories), prompt: 'Select a category' %></li>
    <li><%= form.select :place, options_for_select([["Refregerator", "Refregerator"]]), prompt: 'Select a category' %></li>
    <li><%= form.select :quantity, options_for_select([[1, 1]]), prompt: 'Select a category' %></li>
    <li><%= form.collection_select :owner_id, @users, :id, :name, prompt: 'Select a user who own' %></li>
    <li><%= form.submit 'Register' %></li>
  </ul>
<% end %>
